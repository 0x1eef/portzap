#!/bin/sh -e

##
# variables
gitdir=$1

##
# main
umask u=rwX,g=rX,o=
if [ -e "${gitdir}/.git" ]; then
    set -x
    cd "${gitdir}"
    git pull --rebase origin hardenedbsd/main
else
    echo "A copy of the hardenedbsd ports tree wasn't found."
    echo "Try 'portzap clone' instead."
    exit 1
fi
