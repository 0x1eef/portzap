#!/bin/sh
set -e

#
# globals
#
libexec="$(dirname "$0")"/..

#
# functions
#
. "${libexec}"/functions/print.sh
. "${libexec}"/functions/mdo.sh

#
# main
#
portzap_rules=$(get_portzap_rules "${libexec}")
system_rules=$(get_system_rules)
if [ -z "${system_rules}" ]; then
    printok "disabled"
    exit 1
fi
if is_rule_enabled "${system_rules}" "${portzap_rules}"; then
    printok "enabled"
    exit 0
fi
printok "disabled"
exit 1
